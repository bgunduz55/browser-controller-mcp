{
  "manifest_version": 3,
  "name": "Browser MCP Extension",
  "version": "1.0.0",
  "description": "Browser automation extension for MCP with advanced web scraping capabilities",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:*",
    "ws://localhost:*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/stealth.js", "content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}

